generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  cargo String
  senha String
  criado_em DateTime @default(now())
  alterado_em DateTime @updatedAt
  notas Nota[]
}

model Nota {
  id Int @id @default(autoincrement())
  valor Float
  materia String
  usuarioId Int
  usuario Usuario @relation(fields: [usuarioId], references: [id])
}
